- model_class = Toilet
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @toilet.name
%p
  %strong= model_class.human_attribute_name(:score) + ':'
  %br
  = @toilet.score
%p
  %strong= model_class.human_attribute_name(:cost) + ':'
  %br
  = @toilet.cost
%p
  %strong= model_class.human_attribute_name(:imgurl) + ':'
  %br
  = @toilet.imgurl
%p
  %strong= model_class.human_attribute_name(:lat) + ':'
  %br
  = @toilet.lat
%p
  %strong= model_class.human_attribute_name(:lng) + ':'
  %br
  = @toilet.lng

= render "gmap_js"

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), toilets_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_toilet_path(@toilet), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), toilet_path(@toilet), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
