- model_class = Toilet
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:score)
      %th= model_class.human_attribute_name(:cost)
      %th= model_class.human_attribute_name(:imgurl)
      %th= model_class.human_attribute_name(:lat)
      %th= model_class.human_attribute_name(:lng)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @toilets.each do |toilet|
      %tr
        %td= link_to toilet.id, toilet_path(toilet)
        %td= toilet.name
        %td= toilet.score
        %td= toilet.cost
        %td= toilet.imgurl
        %td= toilet.lat
        %td= toilet.lng
        %td=l toilet.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_toilet_path(toilet), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), toilet_path(toilet), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_toilet_path, :class => 'btn btn-primary'
