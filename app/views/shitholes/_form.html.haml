= form_for @shithole, :html => { :class => 'form-horizontal' } do |f|
  - if @shithole.errors.any?
    #error_explanation
      .alert.alert-error
        = "#{pluralize(@shithole.errors.count, "error")} prohibited this product from being saved:"
        %ul
          - @shithole.errors.full_messages.each do |msg|
            %li= msg
          
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :score, :class => 'control-label'
    .controls
      - Shithole::MIN_SCORE.upto(Shithole::MAX_SCORE) do |i|
        %label.radio.inline
          = f.radio_button :score, i
          = i
        
  .control-group
    = f.label :cost, :class => 'control-label'
    .controls
      = f.text_field :cost, :class => 'text_field'
  .control-group
    = f.label :imgurl, :class => 'control-label'
    .controls
      = f.text_field :imgurl, :class => 'text_field'
  .control-group
    = f.label :lat, :class => 'control-label'
    .controls
      = f.text_field :lat, :class => 'text_field'
  .control-group
    = f.label :lng, :class => 'control-label'
    .controls
      = f.text_field :lng, :class => 'text_field'

  = render :partial => "gmap_js", :locals => {:editable => true}
      
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), shitholes_path, :class => 'btn'
