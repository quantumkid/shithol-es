= form_for @shithole, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :score, :class => 'control-label'
    .controls
      %label.radio.inline
        = f.radio_button :score, 1
        1
      %label.radio.inline
        = f.radio_button :score, 2
        2
      %label.radio.inline
        = f.radio_button :score, 3
        3
      %label.radio.inline
        = f.radio_button :score, 4
        4
      %label.radio.inline
        = f.radio_button :score, 5
        5
  .control-group
    = f.label :cost, :class => 'control-label'
    .controls
      = f.text_field :cost, :class => 'text_field'
  .control-group
    = f.label :imgurl, :class => 'control-label'
    .controls
      = f.text_field :imgurl, :class => 'text_field'
  .control-group
    = f.label :lat, :class => 'control-label'
    .controls
      = f.text_field :lat, :class => 'text_field'
  .control-group
    = f.label :lng, :class => 'control-label'
    .controls
      = f.text_field :lng, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), shitholes_path, :class => 'btn'
