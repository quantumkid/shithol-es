- model_class = Shithole
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:score)
      %th= model_class.human_attribute_name(:cost)
      %th= model_class.human_attribute_name(:imgurl)
      %th= model_class.human_attribute_name(:lat)
      %th= model_class.human_attribute_name(:lng)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @shitholes.each do |shithole|
      %tr
        %td= link_to shithole.id, shithole_path(shithole)
        %td= shithole.name
        %td= shithole.score
        %td= shithole.cost
        %td= shithole.imgurl
        %td= shithole.lat
        %td= shithole.lng
        %td=l shithole.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_shithole_path(shithole), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), shithole_path(shithole), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_shithole_path, :class => 'btn btn-primary'
